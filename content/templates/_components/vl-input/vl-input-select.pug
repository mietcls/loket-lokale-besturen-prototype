script.
    window.onload = function() {
        var selectLijst = document.getElementById('select-lijst');
        vl.select.dress(selectLijst, {
            callbackFn: customFunction,
        });

        function customFunction(selectLijst, params) {
            var searchStr = params.searchStr;
            var jsonData = [
                {type: 'option', label: 'N-VA', value: 'N-VA'},
                //- {type: 'option', label: 'Groen', value: 'GRO'},
                {type: 'option', label: 'GROEI met Open Vld', value: 'VLD'},
                {type: 'option', label: 'Vlaams Belang', value: 'VB'},
                //- {type: 'option', label: 'SPA', value: 'SPA'},
                {type: 'option', label: 'CD&amp;V', value: 'CD&amp;V'},
                {type: 'option', label: 'HELEMAAL HASSELT', value: 'HELEMAAL HASSELT'}
            ];

                if (searchStr.length > 5) {
                    params.callbackFn(false);
                } else {
                    params.callbackFn(jsonData);
                }
            }
        };
